{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Texte</th>
                <th>Image/Video</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.Titre }}</td>
                <td>{{ article.Texte }}</td>
                {% if article.Video != "" %}
                    <td><iframe width="350" height="200" src="https://www.youtube.com/embed/{{ article.Video }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
                {% else %}
                    <td><img src="{{ vich_uploader_asset(article,"imageFile") }}" style="width: auto; max-height:200px"></td>
                {% endif %}
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
