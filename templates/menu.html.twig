{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('main_index') }}">Accueil</a>
                </li>

                {% if app.user != null %}

                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('user_show', {'id': app.user.id}) }}">Mes enfants</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('message_index', {'id':app.user.id}) }}">Mes messages</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                    {% for role in app.user.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('classe_index') }}">Gérer les classes</a>
                            </li>
                        {% endif %}
                    {% endfor %}

                {% else %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('user_new') }}">Inscription</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('enfant_new') }}">Inscrire mon enfant</a>
                    </li>
                {% endif %}

                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('main_information') }}">Informations</a>
                </li>
            </ul>
        </div>
    </nav>



{% endblock %}
